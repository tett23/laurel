#!/usr/bin/env ruby

require 'bundler'
Bundler.require
require 'thor'
require 'active_support'
require 'active_support/core_ext'
require 'yaml'

require 'laurel'

class LaurelCLI < Thor
  desc 'create', 'create resource'
  def create(type, name)
    case type
    when 'project'
      Laurel.create_project(name) unless Dir.exists?(name)

      template_dir = File.join(Laurel::ROOT, 'templates')
      FileUtils.cp_r(File.join(template_dir, 'config'), name) unless Dir.exists?(File.join(template_dir, name))
    end
  end

  desc 'add', 'add page'
  def add(name=nil)
    name = Laurel.generate_page_name() if name.nil?

    Laurel.add_page(name)
  end
end

LaurelCLI.start(ARGV)
